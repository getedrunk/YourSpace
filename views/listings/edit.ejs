<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2">
    <form method="post" action="/listings/<%= obj._id %>?_method=PUT" novalidate class="needs-validation">
      <h2>Update Listing</h2>

      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="title" type="text" value="<%= obj.title %>" class="form-control" required>
        <div class="invalid-feedback">Enter place name</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="description" class="form-control"><%= obj.description %></textarea>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Image</label>
        <input name="image" type="text" value="<%= obj.image %>" class="form-control">
      </div>

      <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input name="price" type="number" value="<%= obj.price %>" class="form-control" required>
        <div class="invalid-feedback">Price is required</div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input name="location" type="text" value="<%= obj.location %>" class="form-control" required>
        <div class="invalid-feedback">Location is required</div>
      </div>

      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input name="country" type="text" value="<%= obj.country %>" class="form-control" required>
        <div class="invalid-feedback">Country is required</div>
      </div>

      <button class="btn btn-dark mt-1 mb-1">Edit</button>
    </form>
  </div>
</div>
