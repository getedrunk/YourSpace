<% layout("/layouts/boilerplate") %>
<h2>All Listings</h2>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for (let i of listings) { %>
    <a href="/listings/<%= i._id %>" class="listing-link">
      <div class="card col">
        <img src="<%= i.image %>" class="card-img-top" alt="Listing-img" style="height: 20rem;">
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= i.title %></b>
            <br>
            &#8377;<%= i.price.toLocaleString("en-IN") %>/night
          </p>
        </div>
      </div>
    </a>
  <% } %>
</div>

