<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-3">
    <h3>Details</h3>
  </div>

  <div class="card col-6 offset-3">
    <img src="<%= obj.image %>" class="card-img-top show-img" alt="Listing-img">
    <div class="card-body">
      <p class="card-text">
        <b><%= obj.title %></b>
        <br>
        <%= obj.description %>
        <br>
        &#8377;<%= obj.price.toLocaleString("en-IN") %>
        <br>
        <%= obj.location %>
        <br>
        <%= obj.country %>
      </p>
    </div>
  </div>

  <br>

  <div class="btns">
    <a href="/listings/<%= obj._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
    <form method="POST" action="/listings/<%= obj._id %>?_method=DELETE">
      <button class="btn btn-dark offset-4">Delete</button>
    </form>
  </div>
</div>
